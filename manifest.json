{
  "name": "Chrome Extension MV3",
  "description": "Building a Chrome Extension MV3",
  "version" :"1.0",
  "manifest_version": 3,
  "action" : {
      "default_popup" : "./popup.html"   
  },
  "background": {
      "service_worker": "./background.js"
  },
  "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "scripting"
  ],
  "host_permissions" : [
      "https://www.gradescope.com/courses/*"
  ],
  "icons" : {
      "16": "/images/Gradescope Logo16.png",
      "32": "/images/Gradescope Logo32.png",
      "48": "/images/Gradescope Logo48.png",
      "128": "/images/Gradescope Logo128.png"
  }
  

}